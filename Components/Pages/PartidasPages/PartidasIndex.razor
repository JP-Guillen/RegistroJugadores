@page "/Partidas/Index"
@using Microsoft.EntityFrameworkCore
@using RegistroJugadores.DAL
@using RegistroJugadores.Models
@rendermode InteractiveServer
@inject PartidasService partidasService
@inject NavigationManager navigationManager
@inject IDbContextFactory<Contexto> DbFactory

<PageTitle>Consulta de Partidas</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Consulta de Partidas</h5>
            <a href="/Partidas/Create" class="btn btn-success">
                <span class="bi bi-plus-square"></span> Crear
            </a>
        </div>

        <div class="card-body">
            <div class="row mb-2">
                <div class="col-3">
                    <label class="col-form-label"><strong>Filtrar por</strong></label>
                </div>
                <div class="col-4">
                    <label class="col-form-label"><strong>Búsqueda</strong></label>
                </div>
            </div>

            <div class="row align-items-center mb-3">
                <div class="col-3">
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" selected disabled>Elija una opción</option>
                        <option value="Estado">Estado</option>
                        <option value="Jugador1Id">Jugador 1</option>
                        <option value="Jugador2Id">Jugador 2</option>
                        <option value="GanadorId">Ganador</option>
                    </InputSelect>
                </div>
                <div class="col-4">
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar" />
                        <button type="button" class="btn btn-outline-primary bi bi-search" @onclick="Buscar"></button>
                    </div>
                </div>
            </div>

            <table class="table table-hover mt-3">
                <thead class="table table-striped text-black text-center">
                    <tr>
                        <th>PartidaId</th>
                        <th>Jugador 1</th>
                        <th>Jugador 2</th>
                        <th>Estado</th>
                        <th>Ganador</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var partida in ListaPartidas)
                    {
                        <tr>
                            <td>@partida.PartidaId</td>
                            <td>@partida.Jugador1?.Nombre</td>
                            <td>@partida.Jugador2?.Nombre</td>
                            <td>@partida.EstadoPartida</td>
                            <td>@partida.Ganador?.Nombre</td>
                            <td>@partida.FechaInicio.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(partida.FechaFin.HasValue? partida.FechaFin.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                            <td>
                                <a href="/Partidas/Edit/@partida.PartidaId" class="btn btn-outline-primary bi bi-pencil-square"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    public List<Partidas> ListaPartidas { get; set; } = new();
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        ListaPartidas = await partidasService.Listar(p => p.PartidaId > 0);
    }

    private async Task Buscar()
    {
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "Estado")
            {
                ListaPartidas = await partidasService.Listar(
                    p => p.EstadoPartida.ToLower().Contains(ValorFiltro.ToLower()));
            }
            else if (Filtro == "Jugador1Id" && int.TryParse(ValorFiltro, out int jugador1))
            {
                ListaPartidas = await partidasService.Listar(p => p.Jugador1Id == jugador1);
            }
            else if (Filtro == "Jugador2Id" && int.TryParse(ValorFiltro, out int jugador2))
            {
                ListaPartidas = await partidasService.Listar(p => p.Jugador2Id == jugador2);
            }
            else if (Filtro == "GanadorId" && int.TryParse(ValorFiltro, out int ganador))
            {
                ListaPartidas = await partidasService.Listar(p => p.GanadorId == ganador);
            }
        }
        else
        {
            ListaPartidas = await partidasService.Listar(p => p.PartidaId > 0);
        }
    }
}
